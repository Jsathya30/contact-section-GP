#btn:hover{
	opacity:0.8;
	font-weight:bold;
}
input::placeholder{
	text-align:left;
}
.title{
	color:#818589;
	font-size:12px;
	padding:20px 5px;
	position:relative;
	max-width:250px;
	
}
.title::after{
	content:"";
	background-color:#FFA500;
	position:absolute;
	width:150px;
	height:1px;
	display:block;
	right:0;
	top:50%;
}
